  <script>
  var pdfUrl = '';
  var correctPassword = 'theravishingfarnear';

  function showOverlay(url) {
    pdfUrl = url;
    document.getElementById('pdf-overlay').style.display = 'flex';
    document.getElementById('pdf-password').value = '';
    document.getElementById('error-msg').style.display = 'none';
    document.getElementById('pdf-password').focus();
  }

  function closeOverlay() {
    document.getElementById('pdf-overlay').style.display = 'none';
    document.getElementById('pdf-password').value = '';
    document.getElementById('error-msg').style.display = 'none';
  }

  function checkPassword() {
    var entered = document.getElementById('pdf-password').value;
    if (entered === correctPassword) {
      window.open(pdfUrl, '_blank');
      closeOverlay();
    } else {
      document.getElementById('error-msg').style.display = 'block';
    }
  }

  document.getElementById('pdf-password').addEventListener('keypress', function(e) {
    if (e.key === 'Enter') checkPassword();
  });

  document.getElementById('pdf-overlay').addEventListener('click', function(e) {
    if (e.target === this) closeOverlay();
  });
  </script>

