{{!< default}}

<script>
document.body.classList.add('has-hero');
</script>

<main id="main" class="content outer radio-page">
    
    <!-- Latest Episode -->
    {{#get "posts" include="authors,tags,excerpt" filter="tag:midnight-radio" limit="1"}}
    {{#foreach posts visibility="all"}}
    <div class="radio-hero-wrapper">
        <a href="{{url}}">
        <div class="image-slider">
            {{#if feature_image}}
                <img
                    class="post-card-image bg-full-image bg-fade-in"
                    srcset="{{img_url feature_image size="xs"}} 300w, {{img_url feature_image size="s" }} 600w, {{img_url feature_image size="m" }} 800w, {{img_url feature_image size="l" }} 1200w, {{img_url feature_image size="xl" }} 1600w, {{img_url feature_image size="xxl" }} 2000w"
                    sizes="(min-width: 1600px) 1600px, 100vw"
                    src="{{img_url feature_image size="xl"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                />
            {{/if}}
        </div>
        
        <div class="radio-hero-content">
            <h5>
                Midnight Radio 
                {{#foreach tags visibility="internal"}}
                {{#if (match slug "^hash-mr-")}}
                    <span class="episode-number" data-ep="{{slug}}"></span>
                {{/if}}
                {{/foreach}}
            </h5>
            <h1>{{title}}</h1> 
            <p>{{{custom_excerpt}}}</p>   
            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="26" viewBox="0 0 15 26" fill="none">
                <path d="M0.346436 0.360352C5.42325 5.24191 13.3464 12.8604 13.3464 12.8604L0.346436 25.3604" stroke="white"/>
            </svg>
        </div>
        </a>
    </div>
    {{/foreach}}
    {{/get}}

    <!-- Three Cards -->
    <div class="inner-wide">     
        <div class="grid notebook">

            <!-- Spite -->
            <article>
                <a href="{{@site.url}}/spite/" class="post-card-link">
                    <div class="post-card bg-dark bg-full">
                        <img src="{{asset 'img/reeves-spite.webp'}}" 
                            class="post-card-image bg-full-image bg-fade-in"
                            alt="Spite Music Player" />
                    </div>
                    <div class="grid-text">
                        <span class="grid-title">Spite</span>
                        <p>A dignified music player for macOS and iOS with big artwork and harmonious colors.</p>
                    </div>
                </a>
            </article>

            <!-- Notebook -->
            <article>
                <a href="{{@site.url}}/notebook" class="post-card-link">
                    <div class="post-card bg-dark bg-full">
                        <img src="{{asset 'img/reeves-notes.webp'}}" 
                            class="post-card-image bg-full-image bg-fade-in"
                            alt="Notebook" />
                    </div>
                    <div class="grid-text">
                        <span class="grid-title">Notebook</span>
                        <p>An ongoing collection of impossible handwriting and daily sentences about the sacred and mundane.</p>
                    </div>
                </a>
            </article>

            <!-- Art -->
            <article>
                <a href="{{@site.url}}/art-diary" class="post-card-link">
                    <div class="post-card bg-dark bg-full">
                        <img src="{{asset 'img/god.webp'}}" 
                            class="post-card-image bg-full-image bg-fade-in"
                            alt="Art Diary" />
                    </div>
                    <div class="grid-text">
                        <span class="grid-title">Art Diary</span>
                        <p>Scattered scenes from museums. Now say it loud: "To every age its art, and to art its freedom."</p>
                    </div>
                </a>
            </article>

        </div>
    </div>
</main>