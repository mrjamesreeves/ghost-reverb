   <div class="inner-wide">
        <div class="post-feed">
            <div class="three">
 
                {{#get 'posts' include='tags,authors' limit='3' filter='id:-{{id}}+tag:[{{primary_tag.slug}}]' as |related|}}
                {{#foreach related}}

                <article class="post-card bg-dark bg-full">
                    {{#if feature_image}}
                        <img
                            class="post-card-image bg-full-image bg-fade-in"
                            srcset="{{img_url feature_image size="xs"}} 300w, {{img_url feature_image size="s" }} 600w, {{img_url feature_image size="m" }} 800w, {{img_url feature_image size="l" }} 1200w, {{img_url feature_image size="xl" }} 1600w, {{img_url feature_image size="xxl" }} 2000w"
                            sizes="(min-width: 1600px) 1600px, 100vw"
                            src="{{img_url feature_image size="xl"}}"
                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                        />
                    {{/if}}
                            <div class="post-card-inside-gradient"></div>

                    <a href="{{url}}">
                        <div class="post-card-inside">
                            <div class="post-card-content">
                                <header class="post-card-header">
                                    {{#if tags }}
                                    <div class="single-tag">                    
                                        {{#foreach tags limit="1"}}
                                            {{name}}
                                        {{/foreach}}
                                    </div>
                                    {{/if}}
                                    <h2 class="post-card-title">{{title}}</h2>
                                    <div class="post-card-meta">
                                        {{> "post-access-label"}}
                                    </div>
                                </header>
                                <div class="post-card-read-more">
                                    <div class="arrow">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </article>

                {{/foreach}}
                {{/get}}

            </div>
        </div>
    </div>  