{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

<main id="main" class="content outer">
    <div class="inner-wide">

        {{!-- Everything inside the #post tags pulls data from the post --}}
        {{#post}}
        <article class="{{post_class}} post-full">
            
<div class="book-club-img">
{{#if feature_image}}
    <img srcset="{{img_url feature_image size="xs"}} 300w, 
              {{img_url feature_image size="s"}} 600w, 
              {{img_url feature_image size="m"}} 800w, 
              {{img_url feature_image size="l"}} 1200w, 
              {{img_url feature_image size="xl"}} 1600w, 
              {{img_url feature_image size="xxl"}} 2000w"
      sizes="(min-width: 1600px) 1600px, 100vw"
      src="{{img_url feature_image size="xl"}}"
      alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
    />
{{/if}}
</div>

</header>


<div class="post-header-content inner">

    {{#has tag="notebook"}}
        <h5><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="LL"}}</time></h5>
        <h1 class="post-title">{{#is "tag"}}<a href="{{url}}">{{title}}</a>{{else}}{{title}}{{/is}}</h1>

    {{else has tag="artwork"}}
        <h1 class="post-title">{{title}}</h1>
        <h5>{{{custom_excerpt}}}</h5>
        <br>

    {{else}}
    
        <h5><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="LL"}}</time></h5>
        <h1 class="post-title no-line">{{#is "tag"}}<a href="{{url}}">{{title}}</a>{{else}}{{title}}{{/is}}</h1>    
        <div class="post-extract">
            <p>{{{custom_excerpt}}}</p>
        </div>

    {{/has}}

</div>

            {{!-- If the user has access, show post content, authors, comments --}}
            {{#if access}}
                <div class="post-content">
                    {{content}}
                </div>

                <div class="meta inner">

                    <div class="tag-box">
                        {{#if tags}}
                        {{#foreach tags}}
                        <h5><a href="{{url}}" title="{{name}}" class="tag tag-{{id}} {{slug}}">{{name}}</a></h5>
                        {{/foreach}}
                        {{/if}}
                    </div>


                    <div class="prev-next">
                        {{#prev_post}}
                            <a href="{{url}}" class="circle-arrow prev">
                                <svg width="36" height="36" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <circle cx="18" cy="18" r="17.5" transform="matrix(-1 0 0 1 36 0)" fill="black" stroke="black"/>
                                <path d="M10.2197 18.5303C9.92678 18.2374 9.92678 17.7626 10.2197 17.4697L14.9926 12.6967C15.2855 12.4038 15.7604 12.4038 16.0533 12.6967C16.3462 12.9896 16.3462 13.4645 16.0533 13.7574L11.8107 18L16.0533 22.2426C16.3462 22.5355 16.3462 23.0104 16.0533 23.3033C15.7604 23.5962 15.2855 23.5962 14.9926 23.3033L10.2197 18.5303ZM25 18V18.75H10.75V18V17.25H25V18Z" fill="white"/>
                                </svg>
                            </a>
                        {{/prev_post}}

                        {{#next_post}}
                            <a href="{{url}}" class="circle-arrow next">
                                <svg width="36" height="36" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <circle cx="18" cy="18" r="17.5" transform="matrix(1 8.74228e-08 8.74228e-08 -1 0 36)" fill="black" stroke="black"/>
                                <path d="M25.7803 17.4697C26.0732 17.7626 26.0732 18.2374 25.7803 18.5303L21.0074 23.3033C20.7145 23.5962 20.2396 23.5962 19.9467 23.3033C19.6538 23.0104 19.6538 22.5355 19.9467 22.2426L24.1893 18L19.9467 13.7574C19.6538 13.4645 19.6538 12.9896 19.9467 12.6967C20.2396 12.4038 20.7145 12.4038 21.0074 12.6967L25.7803 17.4697ZM11 18L11 17.25L25.25 17.25L25.25 18L25.25 18.75L11 18.75L11 18Z" fill="white"/>
                                </svg>
                            </a>
                        {{/next_post}}
                    </div>
                </div>


<div class="book-club-discussion">
<h5>{{comment_count empty=(t "No comments") singular=(t "comment") plural=(t "comments")}}</h5>
</div>

<p class="comments-bit">{{comments title="" count=false}}</p>

               
            {{!-- If the user has no access, show subscribe/upgrade cta --}}
            {{else}}


{{#if html}}
    <div class="post-content">
        <div class="post-teaser">
            {{{html}}}
        </div>
    </div>
{{/if}}
<aside class="subscribe-box inner">
    {{#has visibility="members"}}
        <h2>The Midnight Book Club is for Members Only to Protect Us From Creeps, Randos, and Robots</h2>
        <p class="subscribe-box-text">Join the Midnight Radio Book Club to share your thoughts on short novels and attend monthly discussion events in Columbus, Ohio.<br><br><i>Note: You *might* also receive Midnight Radio emails twice per month but you can easily unsubscribe from them if you're no fun.</i></p>
    {{/has}}
    {{#has visibility="tiers"}}
        <h2 class="subscribe-box-title">
            {{#if tiers.[1]}}
                {{{t "This post is for subscribers on the {tiers_list} tiers only" tiers_list=(tiers lastSeparator=(t " and ") suffix="")}}}
            {{else}}
                {{{t "This post is for subscribers on the {tiers_list} tier only" tiers_list=(tiers lastSeparator=(t " and ") suffix="")}}}
            {{/if}}
        </h2>
        {{#if @member}}
            <p class="subscribe-box-text">{{t "Upgrade your account to keep reading this post."}}</p>
        {{else}}
            <p class="subscribe-box-text">{{t "Subscribe to get access to the post."}}</p>
        {{/if}}
    {{/has}}
    {{#if @member}}
        <a class="button button-solid" href="javascript:" data-portal="account/plans">{{t "Upgrade your account"}}</a>
    {{else}}
        <a class="button button-solid" href="javascript:" data-portal="signup">{{t "Join now"}}</a>
        <p class="subscribe-box-note">{{t "Already have an account?"}} <a href="javascript:" data-portal="signin">{{t "Sign in"}}</a></p>
    {{/if}}
</aside>




            {{/if}}
        </article>
        </div>

        {{!-- Next/previous posts --}}




    

{{/post}}
<style>
    #ghost-comments-root {
        width: 100%;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
    }
</style>

</main>
