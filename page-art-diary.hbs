{{!< default}}

<main id="main" class="content outer page-favorites notebook-collection">
    <div class="inner-wide">

        {{> notebook-header}}

        <!-- Category Filters -->
        <h1 class="post">Art Diary</h1>
        <nav class="favorites-nav">
            <div class="filter-btn active" data-category="all">All</div>
            <div class="filter-btn" data-category="vienna">Vienna</div>
            <div class="filter-btn" data-category="chicago">Chicago</div>
        </nav>


        <!-- Entries Container -->
        <div id="favorites-container" class="favorites-layout">
            <div class="favorites-text-column">
                <!-- JavaScript will populate text entries -->
            </div>
            <div class="favorites-image-column">
                <!-- JavaScript will populate images (absolutely positioned) -->
                <svg class="connector-lines" aria-hidden="true">
                    <!-- JS will draw connector lines here -->
                </svg>
            </div>
        </div>

    </div>
</main>

<script src="{{asset "js/art-diary.js"}}"></script>

<style>
    /* FAVORITES PAGE
----------------------------- */

.page-favorites {
  /* Base styles */
}

.favorites-header {
  margin-bottom: 60px;
}

.favorites-header h1 {
  font-family: var(--font-big);
  font-size: var(--type-h1);
  margin-bottom: 40px;
}

/* Filter buttons */
.favorites-nav {
  display: flex;
  gap: 25px;
  margin-bottom: 80px;
  flex-wrap: wrap;
}

.filter-btn {
  font-family: var(--font-sans);
  text-transform: none;
  letter-spacing: 0;
  font-size: var(--type-h4);
  color: var(--color-hover);
  margin: 0 0 5px 0;
  line-height: 1.2;
  cursor: pointer;
  transition: all 0.3s ease;
  width: auto;
  flex-shrink: 0;
  background: none !important;
  font-weight: 600;
}

.filter-btn:hover {
  background: #444;
  color: var(--color-hover);
}

.filter-btn.active {
  text-decoration: underline;
  text-underline-offset: 5px;
}

/* Two-column layout container */
.favorites-layout {
  display: flex;
  width: 100%;
  max-width: 1300px;
  margin: 0 auto;
  position: relative;
  transition: opacity 0.3s ease;
}

/* Left column: text entries with consistent spacing */
.favorites-text-column {
  flex: 0 0 50%;
  max-width: 550px;
}

/* Right column: images positioned absolutely */
.favorites-image-column {
  flex: 1;
  position: relative;
  margin-left: 120px;
}

/* Each text entry */
.favorite-entry {
  margin-bottom: 40px;
  position: relative;
}

/* Text content */
.favorite-text {
  max-width: 500px;
  position: relative;
}

h3.favorite-title {
  font-family: var(--font-sans);
  text-transform: none;
  letter-spacing: 0;
  font-size: var(--type-h4);
  color: var(--color-hover);
  margin: 0 0 5px 0;
  line-height: 1.2;
}

.favorite-blurb {
  font-family: var(--font-serif);
  font-size: var(--type-body-sm);
  color: var(--color-text);
  line-height: 1.6;
  margin: 0;
}

.favorite-blurb p {
  margin: 0;
}

.favorite-blurb a {
  color: var(--color-text);
  text-decoration: underline;
  text-decoration-color: var(--color-text-muted);
}

.favorite-blurb a:hover {
  color: var(--color-blue);
  text-decoration-color: var(--color-blue);
}

/* Images: absolutely positioned within their column */
.favorite-image {
  position: absolute;
  left: 0;
  max-width: 500px;
  padding-left: 30px;
}

.favorite-image img {
  width: 100%;
  height: auto;
  display: block;
}

/* SVG connector lines */
.connector-lines {
  position: absolute;
  top: 0;
  left: -120px;
  width: 120px;
  height: 100%;
  pointer-events: none;
  overflow: visible;
}

.connector-lines line {
  stroke: var(--bgline, #333);
  stroke-width: 1;
}

/* Link styling for titles and images */
.favorite-title-link,
.favorite-image-link {
  text-decoration: none;
  color: inherit;
  transition: all 0.3s ease;
}

.favorite-title-link:hover h3 {
  text-decoration: underline;
}

.favorite-image-link {
  display: block;
}

.favorite-image-link img {
  transition: all 0.3s ease;
}

.favorite-image-link:hover img {
  opacity: 0.8;
}

/* Responsive */
@media (max-width: 1024px) {
  .favorites-text-column {
    flex: 0 0 45%;
  }

  .favorite-image {
    max-width: 400px;
  }
}

@media (max-width: 768px) {
  .favorites-layout {
    flex-direction: column;
  }

  h1.post {
    font-size: 36px;
  }

  .favorites-text-column {
    flex: none;
    max-width: 100%;
    order: 2;
  }

  .favorites-image-column {
    position: static;
    margin-left: 0;
    margin-bottom: 40px;
    display: flex;
    flex-direction: column;
    gap: 30px;
    order: 1;
  }

  .favorite-entry {
    margin-bottom: 30px;
  }

  /* Mobile: images stack above, static positioning */
  .favorite-image {
    position: static;
    max-width: 100%;
    padding-left: 0;
  }

  .connector-lines {
    display: none;
  }

  .favorites-nav {
    gap: 12px;
  }

  .filter-btn {
    font-size: .85rem;
  }
}

h1.post {
  margin-left: 0;
  padding-bottom: 20px;
  max-width: 100%;
  margin-bottom: 0;
  padding-right: 0;
}

</style>


