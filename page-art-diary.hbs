{{!< default}}

<main id="main" class="content outer page-favorites notebook-collection">
    <div class="inner-wide">

        {{> notebook-header}}

        <!-- Category Filters -->
        <h1 class="post">Art Diary</h1>
        <nav class="favorites-nav">
            <div class="filter-btn active" data-category="all">All</div>
            <div class="filter-btn" data-category="vienna">Vienna</div>
            <div class="filter-btn" data-category="chicago">Chicago</div>
        </nav>


        <!-- Entries Container -->
        <div id="favorites-container" class="favorites-layout">
            <div class="favorites-text-column">
                <!-- JavaScript will populate text entries -->
            </div>
            <div class="favorites-image-column">
                <!-- JavaScript will populate images (absolutely positioned) -->
                <svg class="connector-lines" aria-hidden="true">
                    <!-- JS will draw connector lines here -->
                </svg>
            </div>
        </div>

    </div>
</main>

<script src="{{asset "js/art-diary.js"}}"></script>