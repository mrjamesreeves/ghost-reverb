{{!< default}}

<main id="main" class="content outer page-notebook">
    <div class="inner-wide">

        <!-- Top Section: Title + Featured Pages -->
        <div class="notebook-header">
            <div class="notebook-title">
                <h1>Notebook</h1>
            </div>

            <div class="featured-grid">
                <!-- HIGHLIGHTS -->
                <section class="highlights">
                    <div class="footer-tags">
                        <div class="index"> 
                            <div class="index-item is-visible" data-url="/favorites">
                                <span class="index-name">Favorite Things</span>
                                <span class="index-count">14</span>
                            </div>
                            <div class="index-item is-visible" data-url="/2025-rotation">
                                <span class="index-name">Instructions for Myself</span>
                                <span class="index-count">13</span>
                            </div>    
                            <div class="index-item is-visible" data-url="/dreams">
                                <span class="index-name">Dream Inventory</span>
                                <span class="index-count">14</span>
                            </div> 
                            <div class="index-item is-visible" data-url="/art-diary">
                                <span class="index-name">Art Diary</span>
                                <span class="index-count">14</span>
                            </div>
                            <div class="index-item is-visible" data-url="/god">
                                <span class="index-name">Notes on God</span>
                                <span class="index-count">03</span>
                            </div>
                            <div class="index-item is-visible" data-url="/weather">
                                <span class="index-name">Weather</span>
                                <span class="index-count">21</span>
                            </div>  
                        </div>
                    </div>
                </section>
            </div>
        </div>

        <!-- Chronological Notebook Content -->
        <div id="notebook-container">
            <!-- JavaScript will populate this -->
        </div>

        <!-- HIGHLIGHTS -->
        <section class="highlights">
            <h3 class="sect">Highlights</h3>
            <div class="footer-tags">
                <div class="index">
                    {{#get "posts" filter="featured:true+tag:notebook" limit="8" include="tags"}}
                        {{#foreach posts}}
                            <div class="index-item is-visible" data-url="{{url}}">
                                <span class="index-name">{{title}}</span>
                                <span class="count">{{date published_at format="YYYY"}}</span>
                            </div>
                        {{/foreach}}
                    {{/get}}
                </div>
            </div>
        </section>

        <!-- LOWLIGHTS -->
        <section class="highlights">
            <h3 class="sect">Lowlights</h3>
            <div class="footer-tags">
                <div class="index">
                    {{#get "posts" include="tags" filter="tag:-midnight-radio+featured:false+tag:notebook" limit="900"}}                
                        {{#foreach posts}}
                            <div class="index-item is-visible" data-url="{{url}}">
                                <span class="index-name">{{title}}</span>
                                <span class="count">{{date published_at format="YYYY"}}</span>
                            </div>
                        {{/foreach}}
                    {{/get}}
                </div>
            </div>
        </section>

    </div>
</main>

<script src="{{asset "js/notebook.js"}}"></script>