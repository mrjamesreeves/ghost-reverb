        height: auto;
        padding-top: 70px;
        }

        .spite-screenshot img {
            position: relative !important;
        }

        .spite-hero {
            padding: 0;
            background: #000;
        }
        ul, ol {
            margin-left: 0;
            margin-right: 0;
            margin-top: 0;
            margin-bottom: 20px;
        }
        p, ul li, ol li { font-size: 14px;}

        .app-nav a {
            font-size: 16px;
        }   

        p { margin-bottom: 10px;}

        blockquote h1 {
            font-size: 30px;
        }
        blockquote {
            padding-left: 0px;
            border-left: none;
        }

