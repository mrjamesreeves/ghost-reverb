        color: #000 !important;
        min-width: 250px;
        width: 100%;
        font-size: 20px;
        padding: 12px 30px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        line-height: 1;
        padding-bottom: 14px;
        font-weight: 700;
    }
    .spite-sidebar button:hover {
        background: #fff !important;
    }
    .app-nav a:hover,
    .app-nav a.active {
        opacity: 1;
        color: var(--color-hover);
        border-bottom: 2px solid var(--color-text);
    }

    @media (max-width: 700px) {
