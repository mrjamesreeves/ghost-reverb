        </div>
        <!-- Auto-detecting navigation -->
        <nav class="app-nav">
            <a href="/spite/" data-slug="spite">Features</a>
            <a href="/spite-test-center/" data-slug="spite-test-center">Learning Center</a>
            <a href="/spite-privacy/" data-slug="spite-privacy">Privacy</a>
            <button><a href="https://apps.apple.com/us/app/spite-music-player/id6757397964"></a>Download on the App Store</a></button>

        </nav>
        <script>
        // Highlight active nav item
        (function() {
            const currentSlug = '{{slug}}';
            const links = document.querySelectorAll('.app-nav a[data-slug]');
            links.forEach(link => {
                if (link.getAttribute('data-slug') === currentSlug) {
                    link.classList.add('active');
                }
            });
        })();
        </script>

