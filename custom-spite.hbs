        font-family: var(--font-sans);
        padding-bottom: 8px;
    }

    /* Spite Hero (only shows on main Spite page) */
    .spite-hero {
        width: 100%;
        max-width: 1300px;
        margin: 0 auto 60px;
        background: #1b1b1b;
        border-bottom-right-radius: 20px;
        border-bottom-left-radius: 20px;
        overflow: hidden;
        padding: 5%;
        padding-bottom: 30px;
        box-sizing: border-box;
        }

    .spite-header {
        margin-top: 20px;
        margin-bottom: 30px;
        }

    .spite-copy {
        padding-top: 20px;
    }

    .spite-screenshot {
        position: relative;
        width: 100%;
        aspect-ratio: 300 / 135;
        overflow: hidden;
        }

    .spite-buttons {
        margin-left: 5%
        }

.spite-screenshot img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
    position: absolute;
    background: #1b1b1b;
    top: 0;
    left: 0;
    opacity: 0;
    transition: opacity 1s ease-in-out;
    }

.spite-screenshot img:first-child {
    position: relative;
    opacity: 1;
    }

.spite-screenshot img.active {
    opacity: 1;
    }

/* Left-aligned title and tagline */
.post-header-content {
    text-align: left;
    }

.post-header-content h1 {
    text-align: left;
    margin-bottom: 20px;
    }

.post-header-content + .post-content > p:first-child {
    text-align: left;
    font-size: 1.1em;
    margin-bottom: 40px;
    }

    /* Navigation */
    .app-nav {
        display: flex;
        gap: 30px;
        margin-top: 30px;
        justify-content: left;
    }

    li::marker {
    font-size: 13px; /* or whatever size you want */
    }

    .app-nav a {
        font-size: var(--type-body);
        font-weight: 700;
        color: var(--color-hover);
        padding-bottom: 2px;
    }

    .app-nav button {
        font-weight: 700;
        background-color: #000;
        border-bottom: none;
        font-size: 14px;
        margin-left: 30px;
        color: #fff;
    }
   .spite-sidebar button {
